{
  "source": {
    "base": "./src/",
    "data": "./src/data/",
    "fonts": "./src/fonts/**/*",
    "favicons": "./src/favicons/",
    "images": "./src/images/**/*",
    "scripts": {
      "common": "./src/scripts/common/",
      "vendor": "./src/scripts/vendor/"
    },
    "styles": "./src/styles/"
  },
  "dist": {
    "base": "./public/",
    "fonts": "./public/fonts/",
    "favicons": "./public/favicons/",
    "images": "./public/images/",
    "scripts": "./public/js/",
    "styles": "./public/css/"
  },
  "reports": {
    "stylelint": "./src/reports/stylelint/",
    "eslint": "./src/reports/eslint/"
  },
  "sass": {
    "settings": "./src/styles/_settings/**/*.scss",
    "tools": {
      "functions": "./src/styles/_tools/functions/*.scss",
      "props": "./src/styles/_tools/mixins/_properties.scss",
      "mixins": "./src/styles/_tools/mixins/*.scss"
    },
    "generic": "./src/styles/_generic/**/*.scss",
    "elements": "./src/styles/_elements/**/*.scss",
    "objects": "./src/styles/_objects/**/*.scss",
    "components": "./src/styles/_components/**/*.scss",
    "trumps": "./src/styles/_trumps/**/*.scss"
  }
}
